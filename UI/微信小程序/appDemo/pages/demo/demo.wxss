/**渐变色显示内容**/
.gradient {
  height: 300rpx;
  width: 300rpx;
  background: -webkit-linear-gradient(top, rgba(204, 0, 126, 0.486), #1296db);
}
/**同行显示内容**/
.abreastShow {
  display: flex;
  align-items: center;
  height: 100rpx;
  width:100%;
}
.abreastShow .left {
  width:60%;
  display:inline-block;
  background-color: #dddddd;
}
.abreastShow .right {
  width:40%;
  text-align:right;
  padding-right:10rpx;
  display:inline-block;
  background-color: #dd33dd;
}
/**竖排显示**/
/**默认：writing-mode: horizontal-tb;**/
.txtShow1 {
  writing-mode: vertical-rl;
  font-size: 45rpx;
  background-color: #dd33dd;
}
.txtShow2 {
  writing-mode: vertical-lr;
  font-size: 45rpx;
  background-color: #6666dd;
}
/**表格显示**/
.table {
  border: 0px solid #dddddd;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
  width:40%;
  justify-content: center;
  text-align: center;
  border-right: #000 1rpx solid;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 200rpx;
  height: 100%;
  background: #3366FF;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: #dddddd 1rpx solid;
}
/**滚动条**/
.test_display {
  font-size: 35rpx;
  vertical-align: middle;
  /*影响一行存放的内容长度*/
  margin-right: -2000rpx; 
  display: inline-block;

}
.scroll_display {
  width: 50%;
  height: 20rpx;
  font-size: 35rpx;
  vertical-align: middle;
}
/**下拉列表显示**/
.select_box{
  width:60%;
  height:70%;
  border: #000000 1rpx solid;
  border-radius: 14rpx;
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_box .select .select_text{
  font-size: 34rpx;
  line-height: 28rpx;
  margin: 10rpx;
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
}
.select_box .option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 38rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}